# The first part of the WM_CLASS is the instance, the second part is the class.
# vim: set foldmethod=marker:

# {{{ Variables

set $mod    Mod4
set $term   terminator --geometry=600x400
set $run    exec --no-startup-id

#}}}
# {{{ Global Settings

force_display_urgency_hint 1000 ms
focus_follows_mouse no

floating_modifier $mod

client.focused          #0088CC #0088CC #ffffff #dddddd
client.focused_inactive #333333 #333333 #888888 #292d2e
client.unfocused        #333333 #333333 #888888 #292d2e
client.urgent           #2f343a #900000 #ffffff #900000

font pango: DejaVu Sans Mono:style=Book 9

# Borders
new_window  none
new_float   1pixel

# }}}
# {{{ Autostart

$run feh --bg-scale ~/Pictures/wallpaper.* &
# Ubuntu
#$run /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1 &
# Arch
$run /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
$run insync start &
$run compton -b --config ~/.compton.conf
$run redshift-gtk -l 55.586:13.054 &
$run syndaemon -dtK &

$run xrdb -merge ~/.Xresources &
$run parcellite --daemon &

# }}}
# {{{ Keybinds

bindsym $mod+Return             $run $term
bindsym $mod+BackSpace          $run $term -e /bin/zsh -c "ranger ~"
bindsym $mod+section            $run i3-launcher.sh
#bindsym $mod+Tab                $run
#bindsym $mod+Tab                $run rofi -show ssh
bindsym $mod+d                  $run rofi -show run
bindsym $mod+Escape             bar mode toggle
bindsym XF86KbdBrightnessDown   $run zenbook-lights.sh -kd
bindsym XF86KbdBrightnessUp     $run zenbook-lights.sh -ku
bindsym XF86AudioMute           $run zenbook-audio.sh -m
bindsym XF86AudioLowerVolume    $run zenbook-audio.sh -v -
bindsym XF86AudioRaiseVolume    $run zenbook-audio.sh -v +
bindsym XF86PowerOff            $run i3-exit.sh
bindsym Print                   $run i3-screenshot.sh
bindsym XF86Display             $run arandr
bindsym $mod+Shift+q            kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split direction
#bindsym $mod+h split h
#bindsym $mod+v split v
bindsym $mod+Left   split h
bindsym $mod+Right  split h
bindsym $mod+Up     split v
bindsym $mod+Down   split v

# toggle fullscreen
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# toggle border
bindsym $mod+b border toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# restart (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# }}}
# {{{ Workspace

set $tag1 1
set $tag2 2
set $tag3 3
set $tag4 4
set $tag5 5
set $tag6 6
set $tag7 7
set $tag8 8
set $tag9 9
set $tag10 10

bindsym $mod+1 workspace $tag1
bindsym $mod+2 workspace $tag2
bindsym $mod+3 workspace $tag3
bindsym $mod+4 workspace $tag4
bindsym $mod+5 workspace $tag5
bindsym $mod+6 workspace $tag6
bindsym $mod+7 workspace $tag7
bindsym $mod+8 workspace $tag8
bindsym $mod+9 workspace $tag9
bindsym $mod+0 workspace $tag10

bindsym $mod+Shift+1 move container to workspace $tag1
bindsym $mod+Shift+2 move container to workspace $tag2
bindsym $mod+Shift+3 move container to workspace $tag3
bindsym $mod+Shift+4 move container to workspace $tag4
bindsym $mod+Shift+5 move container to workspace $tag5
bindsym $mod+Shift+6 move container to workspace $tag6
bindsym $mod+Shift+7 move container to workspace $tag7
bindsym $mod+Shift+8 move container to workspace $tag8
bindsym $mod+Shift+9 move container to workspace $tag9
bindsym $mod+Shift+0 move container to workspace $tag10

# Put some autostarted applications in specific workspaces
for_window [instance="Chromium-browser"]    move workspace number $tag1
for_window [instance="google-chrome"]       move workspace number $tag1
for_window [instance="VirtualBox"]          move workspace number $tag9
for_window [instance="virt-manager"]        move workspace number $tag9

# }}}
# {{{ Statusbar

bar {
	position top
    workspace_buttons yes
    # Align terminal rows correctly
    height 18
    status_command python3 ~/.i3/i3status.py

    colors {
        background  #222222
        statusline  #dddddd
        separator   #666666
        focused_workspace   #0088CC #0088CC #ffffff
        active_workspace    #333333 #333333 #888888
        inactive_workspace  #333333 #333333 #888888
        urgent_workspace    #2f343a #900000 #ffffff
    }
}

# }}}
# {{{ Tile/float rules

# }}}
# {{{ Modes

bindsym $mod+r mode "resize"
mode "resize" {
    bindsym h resize shrink     width  10 px or 10 ppt
    bindsym j resize grow       height 10 px or 10 ppt
    bindsym k resize shrink     height 10 px or 10 ppt
    bindsym l resize grow       width  10 px or 10 ppt

    bindsym Left resize shrink  width  10 px or 10 ppt
    bindsym Down resize grow    height 10 px or 10 ppt
    bindsym Up resize shrink    height 10 px or 10 ppt
    bindsym Right resize grow   width  10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# }}}
